# Example variables file for customizing the playbook
# Copy this file to vars.yml and modify as needed
# Usage: ansible-playbook -i inventory.ini install-docker-and-clone.yml --extra-vars "@vars.yml"

# Repository configuration
repo_url: "https://github.com/sanjayBala/buggypi.git"
repo_dest: "/opt/buggypi"

# Alternative: Clone to user's home directory
# repo_dest: "/home/{{ ansible_user }}/buggypi"

# Users to add to docker group
docker_users:
  - "{{ ansible_user }}"
